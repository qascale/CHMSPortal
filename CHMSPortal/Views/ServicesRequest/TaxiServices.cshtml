
@{
    ViewBag.Title = "TaxiServices";
}
<h3>
    Taxi Services
    <small>This form only Taxi Services</small>
</h3>
<!-- START panel-->
<div class="panel panel-default">
    @*<div class="panel-heading">Form elements</div>*@
    <div class="panel-body">
        <form method="get" action="/" class="form-horizontal">
            <fieldset>
                <legend>Taxi Service Booking</legend>
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Guest House<span>*</span></label>
                        <div class="col-sm-4">
                            <select name="account" class="form-control m-b">
                                <option>Option 1</option>
                                <option>Option 2</option>
                                <option>Option 3</option>
                                <option>Option 4</option>
                                <option>Option 5</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin:20px">
                    <label class="col-sm-2 control-label">Guest Name<span>*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" />
                    </div>
                    <label class="col-sm-2 control-label">Mobile Number<span>*</span></label>
                    <div class="col-sm-4">
                        <input type="text" maxlength="10" class="form-control" />
                    </div>
                </div>

                <div class="form-group" style="margin:20px">
                    <label class="col-sm-2 control-label">Email<span>*</span></label>
                    <div class="col-sm-4">
                        <input type="email" class="form-control" />
                    </div>
                    <label class="col-sm-2 control-label">Taxi Type<span>*</span></label>
                    <div class="col-sm-4">
                        <select name="account" class="form-control m-b">
                            <option>Auto</option>
                            <option>Car</option>
                            <option>Bike/option>
                            <option>Option 4</option>
                            <option>Option 5</option>
                        </select>
                    </div>
                </div>
            </fieldset>
            <button type="button" class="mb-sm btn btn-green">Submit</button>
            <button type="button" class="mb-sm btn btn-danger">Reset</button>
        </form>
    </div>
</div>
<!-- END panel-->

@section Styles {

    <link href="~/Vendor/bootstrap-select.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Vendor/bootstrap-select.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.selectpicker').selectpicker();
        });
    </script>

}

