
@*@model IEnumerable<Angle.Areas.FrontOffice.Models.GuestHouseList>*@

@{
    ViewBag.Title = "PantryServicesForm";
}
<h2>Pantry Services Form For Guest</h2>
<div class="panel panel-default">
    @*<div class="panel-heading">Form elements</div>*@
    <div class="panel-body">
        <form method="get" action="/" class="form-horizontal">
            <fieldset>
                <div class="form-group" style="margin-top:20px">
                    <label class="col-sm-2 control-label">Guest House<span>*</span></label>
                    <div class="col-sm-4">
                        <select name="account" class="form-control m-b">
                            <option>jaipur</option>
                            <option>Ajmer</option>
                        </select>
                    </div>
                    <label class="col-sm-2 control-label">Guest Name<span>*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" value="@ViewBag.DisplayName" readonly="readonly"/>
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px">
                    <label class="col-sm-2 control-label">Mobile Number<span>*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" value="@ViewBag.Mobile" readonly="readonly" />
                    </div>
                    <label class="col-sm-2 control-label">Email Address<span>*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" value="@ViewBag.MailPersonal" readonly="readonly" />
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="clearfix"></div><br />
                    <!-- START DATATABLE 1 -->
                    <div class="row">
                        <div class="col-lg-2"></div>
                            <div class="col-lg-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table id="datatable1" class="table table-striped table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Select</th>
                                                        <th>Item Name</th>
                                                        <th>Timing</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="gradeX">
                                                        <td><input type="checkbox" /></td>
                                                        <td>Tea Morning</td>
                                                        <td>10-11 AM</td>
                                                    </tr>
                                                    <tr class="gradeC">
                                                        <td><input type="checkbox" /></td>
                                                        <td>Tea Evening</td>
                                                        <td>4-5 PM</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!-- END DATATABLE 1 -->

            </fieldset>
            <div class="form-group" style="margin-top:20px">

                <div class="col-sm-10">

                </div>
                <button type="button" class="mb-sm btn btn-green">Request</button>
                <button type="button" class="mb-sm btn btn-danger">Reset</button>
            </div>

        </form>
    </div>
</div>

